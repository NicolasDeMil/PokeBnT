<% counter = 0 %>
<%@users.each do |user| %>
<div class="card-product">
    <div class="division_ranks">
      <h5>#<%= counter+=1 %></h5>
    </div>
  <img class="avatar-square" id="navbarDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" src="https://vignette.wikia.nocookie.net/295e578f-a7d1-4240-bc80-303bcfd62dc8">
