    <%user.user_pokemons.each do |pair| %>
      <% @pokemon = pair.pokemon %>
          <img class="avatar-large" id="navbarDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" src="<%= @pokemon.picture %>">
          <div class="pokemon-box-width">
            <p><%= @pokemon.name %></p>
            <p><%= @pokemon.hp %></p>
            <p><%= @pokemon.region %></p>
            <td>
