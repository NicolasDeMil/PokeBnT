<% counter = 0 %>
<%@users.each do |user| %>
<div class="card-product">
  <div class="division_ranks">
    <h5>#<%= counter+=1 %></h5>
  </div>
  <% if current_user.photo.attached? %>
    <%= cl_image_tag current_user.photo.key, crop: :fill, class: "avatar" %>
  <% else %>
    <img class="avatar " src="https://vignette.wikia.nocookie.net/295e578f-a7d1-4240-bc80-303bcfd62dc8">
  <% end %>
  <p class="warrior-name"><%=link_to user.username.capitalize, user_path(user) %></p>
  <div class="card-product-infos">
    <%user.user_pokemons.each do |pair| %>
    <% @pokemon = pair.pokemon %>
    <div>
      <img src="<%= @pokemon.picture %>">
      <div class="pokemon-box-width">
        <p><%= @pokemon.name %></p>
      </div>
    </div>
    <% end %>
  </div>
</div>
<% end %>

